	//*****************************************************		
	public static void Stars7()
	{
		int k=1;
		int l=7;
		for (int j = 1; j<=7; j++)
		{
			for (int i = 1; i<=7; i++)
			{
				if (k>i||l<i)
				{
					System.out.print(" ");	

				}
				else
				{
					System.out.print("*");
				}
			}
			System.out.println();
			k++;
			l--;

		}

	}



