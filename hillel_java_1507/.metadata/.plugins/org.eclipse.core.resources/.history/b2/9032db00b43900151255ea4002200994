	public static void Stars4()
	{
		for (int j = 1; j<=7; j++)
		{
			for (int i = 1; i<=7; i++)
			{
				if ((j == 1 || j == 7) || (i == 1 || i == 7))
				{
					System.out.print("*");
				}
				else
				{
					System.out.print(" ");
				}
			}
			System.out.println();	

		}

	}


