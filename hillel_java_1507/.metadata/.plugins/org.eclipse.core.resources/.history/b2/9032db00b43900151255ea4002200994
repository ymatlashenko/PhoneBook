	//*****************************************************	
	public static void Stars1()
	{
		int k= 7;
		for (int j = 1; j<=7; j++)
		{
			for (int i = 1; i<=k; i++)
			{
				System.out.print("*");	
			}
			System.out.println();	
			k--;

		}

	}



