import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;


/*
1-- выбрать всех персон возрастом от 18 до 35 лет.
2-- выбрать всех персон, где первая буква имени и фамилии совпадают.
3-- выбрать всех персон с кратным id.
4-- выбрать всех персон,  фамилии которых в середине содержат букву "н".
 	Т.е. это должна быть не первая и не последняя буква фамилии.
0- "SELECT * FROM PERSON"
1- "SELECT * FROM PERSON WHERE age BETWEEN 18 AND 35"
2- "SELECT * FROM PERSON WHERE SUBSTRING (fname,1,1)=SUBSTRING (lname,1,1)"
3- "SELECT * FROM PERSON WHERE id %2=0"
4- "SELECT * FROM PERSON WHERE fname NOT LIKE '%н' AND fname NOT LIKE 'н%'  AND fname LIKE '%н%'"

 */
public class DBxx {

	public static void main(String[] args)throws ClassNotFoundException, SQLException
	{
		//String query=
		//String query=
		//String query=
		String query="SELECT * FROM PERSON WHERE fname NOT LIKE '%н' AND fname NOT LIKE 'н%'  AND fname LIKE '%н%'";
		querySql (query);
	}
	public static void querySql (String query) throws ClassNotFoundException, SQLException
	{
		
	
	Class.forName("org.h2.Driver");
	Connection conn = DriverManager.getConnection("jdbc:h2:~/test", "sa", "");
	Statement st = conn.createStatement();
	ResultSet rs = st.executeQuery(query);
	while(rs.next())
	{
		System.out.println(rs.getInt(1) + ", " + rs.getString(2) + ", " + rs.getString(3) + ", " + rs.getInt(4));
	}
	rs.close();
	st.close();
	conn.close();
	
	}

}
