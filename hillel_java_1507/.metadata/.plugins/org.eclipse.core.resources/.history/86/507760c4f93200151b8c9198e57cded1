

public class StarsMain 
{
	public static void main(String[] args) 
	{
		Stars1();
		System.out.println();	
		Stars2();
		System.out.println();	
		Stars3();
		System.out.println();	
		Stars4();
		System.out.println();	
		Stars5();


	}



	//*****************************************************	
	public static void Stars1()
	{
		int k= 7;
		for (int j = 1; j<=7; j++)
		{
			for (int i = 1; i<=k; i++)
			{
				System.out.print("*");	
			}
			System.out.println();	
			k--;

		}

	}



	//*****************************************************		
	public static void Stars2()
	{
		for (int j = 1; j<=7; j++)
		{
			for (int i = 1; i<=7; i++)
			{
				System.out.print("*");	
			}
			System.out.println();	

		}

	}


	//*****************************************************	
	public static void Stars3()
	{
		int k= 1;
		for (int j = 1; j<=7; j++)
		{
			for (int i = 1; i<=k; i++)
			{
				System.out.print("*");	
			}
			System.out.println();	
			k++;

		}

	}


	//*****************************************************		
	public static void Stars4()
	{
		for (int j = 1; j<=7; j++)
		{
			for (int i = 1; i<=7; i++)
			{
				if ((j == 1 || j == 7) || (i == 1 || i == 7))
				{
					System.out.print("*");
				}
				else
				{
					System.out.print(" ");
				}
			}
			System.out.println();	

		}

	}
	
	
	//*****************************************************		
		public static void Stars5()
		{
			int k=7;
			for (int j = 1; j<=7; j++)
			{
				
				for (int i = 1; i<=7; i++)
				{
					if (i>=k)
					{
						System.out.print("*");
					}
					else
					{
						System.out.print(" ");

					}

				}
				System.out.println();	
				k--;


			}

		}








}
